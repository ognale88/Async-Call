<Window x:Class="AsyncCall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncCall"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Border BorderBrush="AliceBlue" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <Button Name="btnStartAsync" Content="Start" Grid.Row="0" Width="50" Height="25" HorizontalAlignment="Left" Margin="2" Click="btnStartAsync_Click"/>
            <Button Name="btnStopAsync" Content="Stop" Grid.Row="0" Width="50" Height="25" HorizontalAlignment="Right" Margin="2" Visibility="Collapsed"/>
            <TextBox Name="txtInput" Grid.Row="1"  Margin="2" KeyDown="txtInput_KeyDown"/>
            <RichTextBox Name="RTBContent" Grid.Row="2"  Margin="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>

        </Grid>
    </Border>
</Window>
